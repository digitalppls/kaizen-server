	"scripts": {
		"chrome": "sh chrome.sh",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"deploy:test": "sh deploy_test.sh",
		"deploy:prod": "sh deploy_prod.sh",
		"generateSDK": "npx swagger-typescript-api --axios true --clean-output true --module-name-index 1  --extract-request-params  true  --route-types true --js true --union-enums true --extract-request-body true  -p https://test.api.wallet33.com/wallet33.json -o ./public/sdk -n wightnight.ts",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --debug --watch",
		"start:dev2": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
